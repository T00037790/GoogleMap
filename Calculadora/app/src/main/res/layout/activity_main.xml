<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alvaro.calculadora.MainActivity">


    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button19"
        android:layout_toEndOf="@+id/button19"
        android:id="@+id/button20"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button20"
        android:layout_toEndOf="@+id/button20"
        android:id="@+id/button21"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button21"
        android:layout_toEndOf="@+id/button21"
        android:id="@+id/button22"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button23"
        android:layout_toEndOf="@+id/button23"
        android:id="@+id/button24"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button24"
        android:layout_toEndOf="@+id/button24"
        android:id="@+id/button25"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button25"
        android:layout_toEndOf="@+id/button25"
        android:id="@+id/button26"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button24"
        android:id="@+id/button27"
        android:layout_height="70dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button28"
        android:layout_toEndOf="@+id/button28"
        android:id="@+id/button29"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/button29"
        android:layout_toEndOf="@+id/button29"
        android:id="@+id/button30"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button23"
        android:layout_above="@+id/button27"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button16"
        android:layout_above="@+id/button20"
        android:layout_toEndOf="@+id/button19"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="/"
        android:layout_height="70dp"
        android:id="@+id/button18"
        android:layout_above="@+id/button21"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="65dp" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button17"
        android:layout_alignTop="@+id/button18"
        android:layout_toEndOf="@+id/button16"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button19"
        android:layout_above="@+id/button24"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button28"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button27"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/button15"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_above="@+id/button19"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:id="@+id/operacion"
        android:layout_above="@+id/resultado"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/resultado"
        android:layout_height="70dp"
        android:layout_above="@+id/button16"
        android:layout_alignParentStart="true">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView3" />
    </LinearLayout>

</RelativeLayout>
